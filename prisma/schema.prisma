// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
  // use default output used by @prisma/client package
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Branch {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  address   String
  phone     String
  email     String?
  services  String   // JSON string array
  hoursJson String   // JSON string for sales/service/sunday
  features  String   // JSON string array
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TestDriveBooking {
  id        String   @id @default(cuid())
  fullName  String
  phone     String
  email     String?
  licenseNo String?
  modelId   String
  branchId  String
  date      String
  timeSlot  String
  createdAt DateTime @default(now())
}

model ServiceBooking {
  id         String   @id @default(cuid())
  fullName   String
  phone      String
  email      String?
  vehicle    String
  serviceId  String
  branchId   String
  notes      String?
  createdAt  DateTime @default(now())
}

model ContactMessage {
  id         String   @id @default(cuid())
  firstName  String
  lastName   String
  email      String
  phone      String
  department String
  subject    String
  message    String
  createdAt  DateTime @default(now())
}

model Newsletter {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}
